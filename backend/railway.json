{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "mvn clean package -DskipTests",
    "buildArgs": {
      "NIXPACKS_PLAN": "maven"
    }
  },
  "deploy": {
    "startCommand": "java -jar target/hospital-er-*.jar",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}